  </exceptions-->

<blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="VerticalTakeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.8" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/> 
    </block>
    <block name="Mapping">
      <call fun="!gh_set_max_speed(1.0)"/>      
      <go wp="WPM0"/>
     <call fun="file_logger_start()"/>
     <call fun="logger_switch(1,0)"/>
      <path wpts="WPM0, WPM1, WPM2, WPM3, WPM4, WPM5, WPM6, WPM7, WPM8, WPM9, WPM10, WPM11, WPM12, WPM13, WPM14, WPM15, WPM16, WPM17, WPM18, WPM19, WPM20, WPM21, WPM22, WPM23, WPM24, WPM25, WPM26, WPM27, WPM28, WPM29, WPM30, WPM31"/>
      <deroute block="LandForCalc"/>
    </block>
    <block name="LandForCalc">
      <go wp="HOME"/>
    </block>
    <block name="Flare2">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="HOME"/>
      <exception cond="block_time > 10" deroute="Calculations" />
    </block>
    <block name="Calculations">
        <exception cond="block_time > 10" deroute="VerticalTakeoff2" />
        <call fun="file_logger_stop()"/>
        <call fun="process_log()"/>  
        <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>      
    </block>
    <block name="VerticalTakeoff2">
      <exception cond="stateGetPositionEnu_f()->z > 2.6" deroute="stay_p1"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="stay_p1">
        <call fun="!gh_set_max_speed(1.0)"/>      
        <stay wp="p1"/>      
    </block>
    <block key="l" name="Land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="Land">
      <go wp="TD"/>
    </block>
    <block name="Flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="Landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
